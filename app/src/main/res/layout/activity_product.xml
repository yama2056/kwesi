<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductActivity">
  <TextView
      android:id="@+id/signin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="20dp"
      android:layout_marginBottom="20dp"
      android:gravity="center"
      android:text="Add Product"
      android:textColor="@color/redishpink"
      android:textSize="35dp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      tools:ignore="MissingConstraints">

  </TextView>

  <EditText
      android:id="@+id/title"
      android:layout_width="390dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="124dp"
      android:background="@color/mint"
      android:drawablePadding="20dp"
      android:hint="Title"
      android:padding="20dp"

      android:textColor="@color/white"
      android:textColorHint="@color/black"
      android:textSize="25sp"
      app:layout_constraintTop_toBottomOf="@id/signin"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="0dp">

  </EditText>

  <EditText
      android:id="@+id/productname"
      android:layout_width="390dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:background="@color/mint"
      android:drawablePadding="20dp"
      android:hint="product name"
      android:padding="20dp"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textSize="25sp"
      app:layout_constraintTop_toBottomOf="@id/title"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="5dp">


  </EditText>

  <EditText
      android:id="@+id/contentdescription"
      android:layout_width="390dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:background="@color/mint"
      android:drawablePadding="20dp"
      android:hint="content discription"
      android:padding="20dp"
      android:text="content Description"
      android:textColor="@color/black"
      android:textColorHint="@color/white"
      android:textSize="25sp"
      app:layout_constraintTop_toBottomOf="@id/productname"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="5dp">

  </EditText>

  <EditText
      android:id="@+id/enquiry"
      android:layout_width="390dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      android:background="@color/mint"
      android:drawablePadding="20dp"
      android:hint="Enquiry"
      android:padding="20dp"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textSize="25sp"
      app:layout_constraintTop_toBottomOf="@id/contentdescription"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="5dp">

  </EditText>

  <EditText
      android:id="@+id/price"
      android:layout_width="189dp"
      android:layout_height="61dp"
      android:layout_below="@id/enquiry"
      android:layout_marginTop="20dp"
      android:background="@color/mint"
      android:drawablePadding="21dp"
      android:hint="price"
      android:padding="20dp"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textSize="25sp"
      android:textStyle="bold"
      app:layout_constraintTop_toBottomOf="@id/enquiry"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="20dp" />

  <Button
      android:id="@+id/btn_add"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/price"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="52dp"
      android:backgroundTint="@color/purple_500"
      android:gravity="center"
      android:text="Add Product"
      android:textSize="20dp"
      app:layout_constraintTop_toBottomOf="@id/price"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="16dp" />

  <ImageView
      android:id="@+id/product_image"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      tools:layout_editor_absoluteX="262dp"
      tools:layout_editor_absoluteY="43dp"
      tools:srcCompat="@tools:sample/avatars"
      tools:ignore="MissingConstraints" />



</androidx.constraintlayout.widget.ConstraintLayout>